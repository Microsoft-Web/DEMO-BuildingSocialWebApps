@using Microsoft.AspNet.Mvc.Facebook
@model FacebookRedirectContext
@{
    ViewBag.Title = "Required Permissions";
}

@if (Model.RequiredPermissions.Length > 0)
{
    <p>You need to grant the following permission(s) on Facebook to view this page:</p>
    <ul>
    @foreach (var permission in Model.RequiredPermissions)
    {
        <li>@permission</li>   
    }
    </ul>
    <a href="@Html.Raw(Model.RedirectUrl)" target="_top">Grant permissions on Facebook</a>
}